@model HomeViewModel

<partial name="_Carousel" />

<div class="text-center">
    <img src="Images/logo.png" class="logo-mark mx-auto" />
    <h1>Most frequently rented bicycles</h1>
    <h5>Enjoy a weekly selection of our favorite bicycles</h5>

    <div class="row pies-of-the-week">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var bike in Model.BicylcesOfTheWeek)
            {
                <partial name="_BicycleCard" model="bike" />
            }
        </div>

    </div>
</div>
